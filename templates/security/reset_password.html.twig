{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<div class="container mt-3">
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-5 shadow-lg p-4 rounded bg-white">
				<h4 class="mb-3">Réinitialiser votre mot de passe</h4><br>

				{% for message in app.flashes('success') %}
					<div class="alert alert-success">{{ message }}</div>
				{% endfor %}

				<form method="post">
					<div class="form-floating mb-3">
						<label for="password">Mot de passe :</label><br>
						<input type="password" name="password" id="password" class="form-control" placeholder="Nouveau mot de passe" required>
					</div><br>

					<div class="justify-content-center d-flex">
						<button type="submit" class="btn btn-outline-primary">Réinitialiser le mot de passe</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
