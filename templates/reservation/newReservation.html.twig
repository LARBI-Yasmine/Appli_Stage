{% extends 'base.html.twig' %}

{% block title %}
	Nouvelle Réservation
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h2 class="text-center mb-4">Nouvelle Réservation</h2>

		<div class="row justify-content-center">
			<div class="col-lg-6 col-md-8 col-sm-10">
				<div class="card shadow-sm border-light">
					<div class="card-body">
						{{ form_start(form) }}

						<div class="form-group mt-3">
							{{ form_label(form.date_debut, null, {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(form.date_debut, {'attr': {'class': 'form-control', 'id': 'date_debut'}}) }}
							{% if form_errors(form.date_debut) %}
								<div class="alert alert-danger mt-2">
									{{ form_errors(form.date_debut) }}
								</div>
							{% endif %}
						</div>

						<div class="form-group mt-3">
							{{ form_label(form.date_fin, null, {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(form.date_fin, {'attr': {'class': 'form-control', 'id': 'date_fin'}}) }}
							{% if form_errors(form.date_fin) %}
								<div class="alert alert-danger mt-2">
									{{ form_errors(form.date_fin) }}
								</div>
							{% endif %}
						</div>

						<div class="d-flex justify-content-center mt-4">
							<button type="submit" class="btn btn-outline-primary">Envoyer</button>&nbsp;&nbsp;
							<a href="{{ path('app_home') }}" class="btn btn-outline-secondary ms-3">Retour</a>
						</div>

						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
