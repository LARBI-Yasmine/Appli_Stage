{% extends 'base.html.twig' %}

{% block title %}Éditer l'Objet
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h2 class="text-center mb-4">Éditer
			{{ objet.nom|capitalize }}</h2>

		<div class="row justify-content-center">
			<div class="col-lg-8 col-md-10 col-sm-12">
				<div class="card shadow-sm border-light">
					<div class="card-body">
						{{ form_start(form) }}

						<div class="mb-3">
							{{ form_widget(form) }}
						</div>

						<div class="d-flex justify-content-center">
							<button type="submit" class="btn btn-outline-primary">Enregistrer</button>&nbsp;&nbsp;
							<a href="{{ path('app_objet') }}" class="btn btn-outline-secondary">Retour</a>
						</div>

						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
